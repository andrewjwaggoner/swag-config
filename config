include $HOME/.config/sway/config.d/*.conf

# Launch WM apps
exec gentoo-pipewire-launcher &

# Set the background images.
output '*' bg "$(find $wallpapers_path -maxdepth 1 -type f | shuf -n1)" fill

# Autostart applications
exec swaymsg "workspace assistant_1; exec kitty btop;"
exec swaymsg "workspace code; exec kitty;"
